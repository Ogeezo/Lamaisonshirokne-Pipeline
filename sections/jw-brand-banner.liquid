<!-- /sections/index-blog.liquid -->

{%- assign blog = blogs[section.settings.homepage_blog] -%}
{%- assign post_count = section.settings.homepage_blog_count -%}

{% case post_count %}
  {% when 0 %}
  {% when 1 %}
    {% assign blog_grid = 'medium-up--one-half medium-up--push-one-quarter' %}
  {% when 2 %}
    {% assign blog_grid = 'medium-up--one-half' %}
  {% when 3 %}
    {% assign blog_grid = 'medium-up--one-third' %}
{% endcase %}

<style>
  .section-{{ section.id }} .article__card{
    min-height: {{ section.settings.height | append: 'px' }};
  }
</style>

<div class="jw-brand-banner homepage-blog {{ section.settings.bg }} section-{{ section.id }}">
  <div class="wrapper">
      {% unless section.settings.title == '' %}
      <h2 class="home__subtitle">{{ section.settings.title | escape }}</h2>
      {% endunless %}
      <div class="grid grid--uniform">
        {% for block in section.blocks %}
          <div class="grid__item {{ blog_grid }}">
            <div class="blog__link">
              <div class="blog__article article__card">
                <div class="rte blog__article__content">
                  <a class="jw-brand-banner-link" href="{{ block.settings.banner-link }}">
                    <img class="jw-brand-banner-image" src="{{ block.settings.banner-image | img_url: '540x' }}" alt="">
                    <h3 class="jw-brand-banner-title">{{ block.settings.banner-title }}</h3>
                    <div class="image-overlay--bottom"></div>
                  </a>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
  </div>
</div>
{% schema %}
{
  "name": "jw-brand-banner",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "brand"
    },
    {
      "type":    "range",
      "id":      "homepage_blog_count",
      "min":     1,
      "max":     3,
      "step":    1,
      "label":   "Number of posts to display",
      "default": 2
    },
    {
      "type": "select",
      "id": "bg",
      "label": "Background color",
      "default": "section",
      "options": [
        { "value": "section", "label": "Default"},
        { "value": "section bg--accent", "label": "Light"},
        { "value": "section--dark", "label": "Dark"},
        { "value": "section--dark bg--accent", "label": "Dark accent"}
      ]
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "banner",
      "settings": [
        {
        "type": "image_picker",
        "id": "banner-image",
        "label": "バナー画像",
        "info": "表示縦横比は2:1"
        },
        {
        "type": "text",
        "id": "banner-title",
        "label": "タイトル",
        "info": "h3"
        },
        {
        "type": "url",
        "id": "banner-link",
        "label": "リンク",
        "info": "リンク"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "jw-brand-banner",
      "category": "banner"
    }
  ]
}
{% endschema %}
